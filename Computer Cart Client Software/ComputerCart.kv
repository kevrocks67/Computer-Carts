#: import kivy kivy
#: import ScreenManager kivy.uix.screenmanager
#: import SlideTransition kivy.uix.screenmanager.SlideTransition
#: import TabbedPanel kivy.uix.tabbedpanel.TabbedPanel

<LoginScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.176, 0.243, 0.314, 1.0
            Rectangle:
                pos: self.pos
                size: self.size
        canvas:
            Color:
                rgba: 0.925, 0.941, 0.937, 1.0
            RoundedRectangle:
                pos: self.center_x - 150, self.center_y - 130
                size: 300, 250
                radius: 10,10,10,10
        FloatLayout:
            TextInput:
                id: inp_username
                size_hint: .2, None
                pos_hint: {'x':.4, 'y':.5}
                height: self.minimum_height
                hint_text: 'Username'
                multiline: False
                write_tab: False
                halign: 'justify'
                border: 10,10,10,10

            TextInput
                id:inp_password
                size_hint: .2, None
                pos_hint: {'x':.4, 'y':.42}
                height: self.minimum_height
                hint_text: 'Password'
                multiline: False
                password: True
                write_tab: False
                halign: 'justify'
                border: 10,10,10,10

            Button:
                text: 'Login'
                size_hint: None, None
                height:'48dp'
                pos_hint: {'x':.55, 'y':.3}
                on_release: root.check_auth(inp_username.text, inp_password.text)

            Button:
                text: 'Register'
                size_hint: None, None
                height:'48dp'
                pos_hint: {'x':.33, 'y':.3}
                on_release: root.register_butt()

            Button:
                text: 'Settings'
                size_hint: None, None
                height: '48dp'
                pos_hint: {'x':.86, 'y':0.02}
                on_release: root.manager.transition = SlideTransition(direction="left")
                on_release: root.settings()

<RegisterPopup>:
    title: 'Register New Account'
    size_hint: .75, .75

    FloatLayout:
        TextInput:
            id: uname
            hint_text: 'Desired Username'
            size_hint: .5, .1
            pos_hint: {'x':.2, 'y':.6}
            multiline: False
            write_tab: False

        TextInput:
            id:pwd
            hint_text: 'Desired Password'
            size_hint: .5, .1
            pos_hint: {'x':.2, 'y':.4}
            multiline: False
            write_tab: False

        Button:
            id: RegisterButton
            text: 'Register Account'
            on_release: root.register(uname.text, pwd.text)
            size_hint: .5, .1
            pos_hint: {'x':.2, 'y':.2}

        Button:
            id: ClosePopup
            text: 'Cancel'
            size_hint: .1, .1
            pos_hint: {'x':.9, 'y':1}
            on_release: root.dismiss()

<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (0.5, 0.2, 0.1, 1) if self.selected else (0.5, 0.5, 0.5, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<MainScreen>:
    rv: rv
    RecycleView:
        id: rv
        #scroll_type: ['bars', 'content']
        #scroll_wheel_distance: dp(114)
        #bar_width: dp(10)
        viewclass: 'SelectableLabel'
        SelectableRecycleBoxLayout:
            default_size: None, dp(50)
            default_size_hint: 1, None
            size_hint_y: .8
            height: self.minimum_height
            orientation: 'vertical'
            multiselect: False
            touch_multiselect: False
            RecycleBoxLayout:
                default_size: None, dp(50)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)
    BoxLayout:
        id: AddBox
        orientation: 'vertical'
        GridLayout:
            cols: 6
            rows: 1
            size_hint_y: None
            pos_hint: {'x':-1, 'y':.1}
            height: dp(50)
            padding: dp(8)
            spacing: dp(16)

            BoxLayout:
                spacing: dp(8)

                Label:
                    id: cart_id
                    text: ''

                TextInput:
                    id: cart_type
                    size_hint_x: None
                    hint_text: 'Cart Type'
                    write_tab: False

                TextInput:
                    id: cart_crm
                    multiline: False
                    size_hint_x: None
                    hint_text: 'Current Room'
                    write_tab: False

                TextInput:
                    id: cart_cpd
                    multiline: False
                    size_hint_x: None
                    hint_text: 'Current Period'
                    write_tab: False

                TextInput:
                    id: cart_frm
                    multiline: False
                    size_hint_x: None
                    hint_text: 'Future Room'
                    write_tab: False

                TextInput:
                    id: cart_fpd
                    multiline: False
                    size_hint_x: None
                    hint_text: 'Future Period'
                    write_tab: False

                TextInput:
                    id: cart_stat
                    size_hint_x: None
                    hint_text: 'Status'
                    write_tab: False

                Button:
                    text: 'Add Cart'
                    size_hint_x: None
                    on_release: root.add_cart(cart_type.text, cart_crm.text, cart_cpd.text, cart_frm.text, cart_fpd.text)

    BoxLayout:
        id: EditBox
        orientation: 'vertical'
        GridLayout:
            cols: 6
            rows: 1
            size_hint_y: None
            pos_hint: {'x':-1, 'y':.1}
            height: dp(50)
            padding: dp(8)
            spacing: dp(16)

            BoxLayout:
                spacing: dp(8)

                Label:
                    id: cart_id_e
                    text: ''
                TextInput:
                    id: cart_type_e
                    size_hint_x: None
                    multiline: False
                    hint_text: 'Cart Type'
                    write_tab: False

                TextInput:
                    id: cart_crm_e
                    size_hint_x: None
                    multiline: False
                    hint_text: 'Current Room'
                    write_tab: False

                TextInput:
                    id: cart_cpd_e
                    size_hint_x: None
                    multiline: False
                    hint_text: 'Current Period'
                    write_tab: False

                TextInput:
                    id: cart_frm_e
                    size_hint_x: None
                    multiline: False
                    hint_text: 'Future Room'
                    write_tab: False

                TextInput:
                    id: cart_fpd_e
                    size_hint_x: None
                    multiline: False
                    hint_text: 'Future Period'
                    write_tab: False

                TextInput:
                    id: cart_stat_e
                    size_hint_x: None
                    multiline: False
                    hint_text: 'Status'
                    write_tab: False

                Button:
                    text: 'Edit Cart'
                    size_hint_x: None
                    on_release: root.edit_cart(cart_type_e.text, cart_crm_e.text, cart_cpd_e.text, cart_frm_e.text, cart_fpd_e.text)

    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Computer Cart Management Software Alpha'
                on_release: root.replace_text('UpdateSQL')
                #app_icon: 'csslogocut small.png'
                with_previous: False
            ActionOverflow:
            ActionButton:
                text: 'Add'
                on_release: root.show_add()

            ActionButton:
                text: 'Remove'
                on_release: root.remove_cart()
            ActionButton:
                text: 'Edit'
                on_release: root.show_edit()
            ActionGroup:
                text: 'Unlock/Lock'
                ActionButton:
                    text: 'Unlock'
                ActionButton:
                    text: 'Lock'
            ActionGroup:
                text: 'Settings'
                ActionButton:
                    text: 'Settings'
                    on_release: root.manager.transition = SlideTransition(direction="right")
                    on_release: root.manager.current = 'settings'

<SettingsScreen>:
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Settings'
                with_previous: False
                on_release: root.manager.transition = SlideTransition(direction="right")
                on_release: root.buttons()
            ActionOverflow:
            ActionGroup:
                ActionButton:
                    text: 'Save Settings'
                    on_release: root.manager.transition = SlideTransition(direction="right")
                    on_release: root.buttons()
                    on_release: root.set_sql_cred(sql_address.text, sql_port.text, sql_user.text, sql_password.text, sql_db.text)

    FloatLayout:
        Label:
            text: 'SQL Username'
            pos_hint: {'x': -.25, 'y': .40}
        TextInput:
            id: sql_user
            size_hint: .4, .07
            pos_hint: {'x': .05, 'y': .8}
            font_size: 25
            multiline: False
            write_tab: False
            input_filter: lambda text, from_undo: text[:20 - len(self.text)]

        Label:
            text: 'SQL Password'
            pos_hint: {'x': .25, 'y': .40}
        TextInput:
            id: sql_password
            size_hint: .4, .07
            pos_hint: {'x': .55, 'y': .8}
            font_size: 25
            password: True
            multiline: False
            write_tab: False
            input_filter: lambda text, from_undo: text[:31 - len(self.text)]

        Label:
            text: 'SQL Address'
            pos_hint: {'x': -.25, 'y': .27}
        TextInput:
            id: sql_address
            size_hint: .4, .07
            pos_hint: {'x': .05, 'y': .68}
            font_size: 25
            multiline: False
            write_tab: False
            input_filter: lambda text, from_undo: text[:25 - len(self.text)]

        Label:
            text: 'SQL Port'
            pos_hint: {'x': 0.03, 'y': .27}
        TextInput:
            id: sql_port
            size_hint: .15, .07
            pos_hint: {'x': .46, 'y': .68}
            font_size: 25
            multiline: False
            write_tab: False
            input_filter: lambda text, from_undo: text[:5 - len(self.text)]

        Label:
            text: 'SQL Table'
            pos_hint: {'x': .30, 'y': .27}
        TextInput:
            id: sql_db
            size_hint: .3, .07
            pos_hint: {'x': .65, 'y': .68}
            font_size: 25
            multiline: False
            write_tab: False
            input_filter: lambda text, from_undo: text[:20 - len(self.text)]


        Label:
            text: 'Notification Settings'
            bold: True
            pos_hint: {'x': 0, 'y': .15}
        Label:
            text: 'Add Email:'
            pos_hint: {'x': -.4, 'y': .09}
        TextInput:
            id: AddEmail
            size_hint: .5, .07
            pos_hint: {'x': .15, 'y': .55}
            font_size: 25
            multiline: False
            write_tab: False
            input_filter: lambda text, from_undo: text[:48 - len(self.text)]
        Label:
            text: 'Current Emails'
        TextInput:
            id: CurrentEmail
            size_hint: .4, .2
            pos_hint: {'x': .3, 'y': .25}
            font_size: 25
            multiline: False
            write_tab: False
            input_filter: lambda text, from_undo: text[:48 - len(self.text)]
        Button:
            id: btn
            text: 'Press to change Notification time'
            size_hint: .3, .07
            pos_hint: {'x': .67, 'y': .55}
            on_release: dropdown.open(self)
            height: '24dp'
        Button:
            id: AboutButton
            size_hint: .2, .07
            pos_hint: {'x': .4, 'y': .10}
            text: 'About'
            on_release: app.show_popup_settings()

        DropDown:
            id: dropdown
            on_select: btn.text = '{}'.format(args[1])

            Button:
                text: '5 Minutes'
                size_hint_y: None
                height: '48dp'
                on_release: dropdown.select('5 Minutes')
                on_release: root.set_time_5()

            Button:
                text: '10 Minutes'
                size_hint_y: None
                height: '48dp'
                on_release: dropdown.select('10 Minutes')
                on_release: root.set_time_10()

            Button:
                text: '15 Minutes'
                size_hint_y: None
                height: '48dp'
                on_release: dropdown.select('15 Minutes')
                on_release: root.set_time_15()

            Button:
                text: '20 Minutes'
                size_hint_y: None
                height: '48dp'
                on_release: dropdown.select('20 Minutes')
                on_release: root.set_time_20()

            Button:
                text: '25 Minutes'
                size_hint_y: None
                height: '48dp'
                on_release: dropdown.select('25 Minutes')
                on_release: root.set_time_25()

            Button:
                text: '45 Minutes'
                size_hint_y: None
                height: '48dp'
                on_release: dropdown.select('45 Minutes')
                on_release: root.set_time_45()

<SettingsPopup>:
    size_hint: 1, 1
    auto_dismiss: False
    title: 'About'

    Button:
        font_size: 22
        line_height: 2
        text: 'This app is designed by Kevin Diaz in order to manage\n the need for computer carts within the Columbia Secondary School.\nAll source code is available at\nhttps://github.com/kevrocks67/Computer-Carts\nClick me to dismiss'
        on_press: root.dismiss()




