ActionBar:
    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'Computer Cart Management Software Alpha'
            with_previous: False
        ActionOverflow:
        ActionButton:
            text: 'Add'
            on_release: app.show_popupAdd()
        ActionButton:
            text: 'Remove'
        ActionButton:
            text: 'Edit'
            on_release: app.show_popupEdit()
        ActionGroup:
            text: 'Unlock/Lock'
            ActionButton:
                text: 'Unlock'
            ActionButton:
                text: 'Lock'
        ActionGroup:
            text: 'Settings'
            ActionButton:
                text: 'Settings'
                on_release: app.show_popupSettings()
<AddEntryPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Add Entry'
    Button:
        text: 'Click me to dismiss'
        on_press: root.dismiss()
<EditEntryPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Edit Entry'
    Button:
        text: 'Click me to dismiss'
        on_press: root.dismiss()
<SettingsPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Settings'
    Button:
        text: 'Click me to dismiss'
        on_press: root.dismiss()